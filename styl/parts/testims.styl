#certs_and_reveiws
    width: 100%
    padding 0 0 90px
    background-image url(../img/white_bg.jpg)
    background-repeat no-repeat
    background-position: center top
    background-size: cover
#certs
    h4
        font-size: 22px;
        color: rgb(8, 20, 32);
        line-height: 1.5;
        text-align: center;
        margin-bottom: 42px
#certs_carousel
    margin 0 auto 133px
    .owl-stage-outer
        min-height 155px
    .certs_img
        width: auto
        display block
        margin 0 auto
.owl-carousel
    .owl-nav
        height 0
        top: 35%
        position: absolute
        width: 100%
        z-index 999
        left 2px
        [class*="owl-"]
            height 24px;
            width: 14px
            background-repeat no-repeat
            background-image url(../img/arrows.png)
            background-color: transparent
            margin 0
            padding 0
            &:hover
                background-color: transparent
                background-image url(../img/arrows.png)
        .owl-prev
            float left
        .owl-next
            float: right
            background-position -14px 0
            &:hover
                background-position -14px 0
#video_reviews
    margin 56px auto
    .video_wrapper
        width: 91%
    .owl-nav
        top 40%
    img
        width: 90%
        margin 0 auto
#text_reviews
    .owl-stage-outer
        min-height 150px
    img
        max-width 848px
        margin 0 auto
        width: 90%
    .owl-nav
        top 50%